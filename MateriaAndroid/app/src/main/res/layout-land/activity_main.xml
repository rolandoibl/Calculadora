<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="horizontal"
    android:rowCount="6"
    android:columnCount="6"
    tools:context=".MainActivity">


    <Button
        android:id="@+id/btnExp"
        android:layout_width = "60dp"
        android:layout_height = "60dp"
        android:backgroundTint="@color/colorAccent"
        android:text = "e^x"
        android:textSize="15dp"
        android:onClick="onClickOperacion"
        android:background="@drawable/circle"
        android:layout_row="1"
        android:layout_column="0"
        />

    <Button
        android:id="@+id/btnLog"
        android:layout_width = "60dp"
        android:layout_height = "60dp"
        android:backgroundTint="@color/colorAccent"
        android:text = "LN X"
        android:textSize="15dp"
        android:onClick="onClickOperacion"
        android:background="@drawable/circle"
        android:layout_row="2"
        android:layout_column="0"
        />

    <Button
        android:id="@+id/btnCoseno"
        android:layout_width = "60dp"
        android:layout_height = "60dp"
        android:backgroundTint="@color/colorAccent"
        android:text = "COS X"
        android:textSize="12dp"
        android:onClick="onClickOperacion"
        android:background="@drawable/circle"
        android:layout_row="3"
        android:layout_column="0"
        />

    <Button
        android:id="@+id/btnSeno"
        android:layout_width = "60dp"
        android:layout_height = "60dp"
        android:backgroundTint="@color/colorAccent"
        android:text = "SIN X"
        android:textSize="12dp"
        android:onClick="onClickOperacion"
        android:background="@drawable/circle"
        android:layout_row="4"
        android:layout_column="0"
        />
    <Button
        android:id="@+id/btnTresVertical"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:background="@drawable/circle"
        android:backgroundTint="@android:color/darker_gray"
        android:onClick="onClick"
        android:layout_row="1"
        android:layout_column="4"
        android:text="3"
        android:textSize="20dp"/>

    <Button
        android:id="@+id/btnSeisVertical"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:background="@drawable/circle"
        android:backgroundTint="@android:color/darker_gray"
        android:onClick="onClick"
        android:layout_row="2"
        android:layout_column="4"
        android:text="6"
        android:textSize="20dp"/>

    <Button
        android:id="@+id/btnNueveVertical"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:background="@drawable/circle"
        android:backgroundTint="@android:color/darker_gray"
        android:onClick="onClick"
        android:layout_row="3"
        android:layout_column="4"
        android:text="9"
        android:textSize="20dp"/>

    <TextView
        android:id="@+id/txtvRespuestaVertical"
        android:layout_width="238dp"
        android:layout_height="wrap_content"
        android:layout_row="0"
        android:layout_column="1"
        android:layout_columnSpan="4"
        android:gravity="end"
        android:textAlignment="viewEnd"
        android:textColor="@android:color/black"
        android:textSize="45dp" />

    <Button
        android:id="@+id/btnCuadrado"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:background="@drawable/circle"
        android:backgroundTint="@color/colorAccent"
        android:onClick="onClickOperacion"
        android:layout_row="1"
        android:layout_column="1"
        android:text="x^2"
        android:textSize="15dp"/>

    <Button
        android:id="@+id/button"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:backgroundTint="@color/colorAccent"
        android:onClick="onClickIgual"
        android:text="="
        android:layout_column="1"
        android:layout_row="4"
        android:textSize="20dp"/>

    <Button
        android:id="@+id/btnCubo"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:background="@drawable/circle"
        android:backgroundTint="@color/colorAccent"
        android:onClick="onClickOperacion"
        android:text="x^3"
        android:layout_column="1"
        android:layout_row="2"
        android:textSize="15dp"/>

    <Button
        android:id="@+id/btnFraccion"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:background="@drawable/circle"
        android:backgroundTint="@color/colorAccent"
        android:onClick="onClickOperacion"
        android:text="SQRT"
        android:layout_column="1"
        android:layout_row="3"
        android:textSize="15dp"/>


    <Button
        android:id="@+id/btnPuntoVertical"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:background="@drawable/circle"
        android:backgroundTint="@android:color/darker_gray"
        android:onClick="onClickPunto"
        android:text="."
        android:layout_row="4"
        android:layout_column="3"
        android:textSize="20dp" />

    <Button
        android:id="@+id/btnDivisionVertical"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:background="@drawable/circle"
        android:backgroundTint="@color/colorAccent"
        android:onClick="onClickOperacion"
        android:text="รท"
        android:layout_row="1"
        android:layout_column="5"
        android:textSize="20dp"/>

    <Button
        android:id="@+id/btnSumaVertical"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:background="@drawable/circle"
        android:backgroundTint="@color/colorAccent"
        android:onClick="onClickOperacion"
        android:text="+"
        android:layout_column="5"
        android:layout_row="3"
        android:textSize="20dp"/>

    <Button
        android:id="@+id/btnMultiplicarVertical"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:background="@drawable/circle"
        android:backgroundTint="@color/colorAccent"
        android:onClick="onClickOperacion"
        android:text="x"
        android:layout_column="5"
        android:layout_row="2"
        android:textSize="20dp" />

    <Button
        android:id="@+id/btnMenosVertical"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:background="@drawable/circle"
        android:backgroundTint="@color/colorAccent"
        android:onClick="onClickOperacion"
        android:text="-"
        android:layout_column="5"
        android:layout_row="4"
        android:textSize="20dp"/>

    <Button
        android:id="@+id/btnUnoVertical"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:background="@drawable/circle"
        android:backgroundTint="@android:color/darker_gray"
        android:onClick="onClick"
        android:text="1"
        android:layout_column="2"
        android:layout_row="1"
        android:textSize="20dp" />

    <Button
        android:id="@+id/btnCuatroVertical"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:background="@drawable/circle"
        android:backgroundTint="@android:color/darker_gray"
        android:onClick="onClick"
        android:text="4"
        android:layout_row="2"
        android:layout_column="2"
        android:textSize="20dp"/>

    <Button
        android:id="@+id/btnSieteVertical"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:background="@drawable/circle"
        android:backgroundTint="@android:color/darker_gray"
        android:onClick="onClick"
        android:text="7"
        android:layout_row="3"
        android:layout_column="2"
        android:textSize="20dp"/>

    <Button
        android:id="@+id/btnCeroVertical"
        android:layout_width="59dp"
        android:layout_height="61dp"
        android:background="@drawable/circle"
        android:backgroundTint="@android:color/darker_gray"
        android:onClick="onClick"
        android:text="0"
        android:layout_row="4"
        android:layout_column="2"
        android:textSize="20dp"/>

    <Button
        android:id="@+id/btnDosVertical"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:background="@drawable/circle"
        android:backgroundTint="@android:color/darker_gray"
        android:onClick="onClick"
        android:text="2"
        android:layout_row="1"
        android:layout_column="3"
        android:textSize="20dp"/>

    <Button
        android:id="@+id/btnOchoVertical"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:background="@drawable/circle"
        android:backgroundTint="@android:color/darker_gray"
        android:onClick="onClick"
        android:layout_row="3"
        android:layout_column="3"
        android:text="8"
        android:textSize="20dp" />

    <Button
        android:id="@+id/btnIgualVertical"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:background="@drawable/circle"
        android:backgroundTint="@color/colorAccent"
        android:onClick="onClickCorregir"
        android:layout_row="4"
        android:layout_column="4"
        android:text="C"
        android:textSize="20dp" />

    <Button
        android:id="@+id/btnCincoVertical"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:background="@drawable/circle"
        android:backgroundTint="@android:color/darker_gray"
        android:onClick="onClick"
        android:text="5"
        android:layout_row="2"
        android:layout_column="3"
        android:textSize="20dp"/>

</GridLayout>